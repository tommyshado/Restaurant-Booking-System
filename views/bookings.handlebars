<form action="/bookings" method="get">

    <h1 class="title is-2" >Bookings</h1>

        <div class="notification is-danger is-light">
            {{!-- you can remove the button below if you want --}}
            <button class="delete"></button>
            Error Flash messages goes here...
            <a href="https://bulma.io/documentation/elements/notification/">Read here if you wanna change the style</a>
        </div>
        <div class="notification is-success is-light">
            {{!-- you can remove the button below if you want --}}
            <button class="delete"></button>
            Success Flash messages goes here...
            <a href="https://bulma.io/documentation/elements/notification/">Read here if you wanna change the style</a>
        </div>

        <div class="field">
            <label class="label" for="">Bookings for</label>
            <input class="input is-normal is-2" type="text" placeholder="enter username" > 
        </div>
        <div class="field" >
            <input class="button is-info" type="submit" value="Search">
        </div>

    <table class="table is-fullwidth" >
        <tr>
            <th>Table name</th>
            <th>Table capacity</th>
            <th>Booking size</th>
            <th>Booked by</th>
            <th>Contact number</th>
            <th></th>
        </tr>


        {{!-- get the tables data and loop over the length of the tables data and --}}
        {{#each tables}}
        <tr>
            {{!-- grab the keys  --}}
            <td name="tableName">{{table_name}}</td>
            <td>{{capacity}}</td>
            <td>{{number_of_people}}</td>
            <td>{{username}}</td>
            <td>{{contact_number}}</td>
            <td>
                <form action="/cancel" method="post">
                    <button class="button is-warning" onclick="return resetOnClick()" >Cancel booking</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </table>

</form>

<script>

    function resetOnClick() {
        return confirm("Are you sure you want to delete the data?");
    }
</script>
